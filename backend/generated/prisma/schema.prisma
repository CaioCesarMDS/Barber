generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
}

model Barbershop {
  id       String     @id @default(uuid())
  name     String
  address  String
  imageUrl String
  services Services[]
}

model Services {
  id           String     @id @default(uuid())
  name         String
  price        Decimal    @db.Decimal(10, 2)
  description  String
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
}
