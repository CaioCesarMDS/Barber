generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  phone    String @unique
  email    String @unique
  password String
}

model Barbershop {
  id       String    @id @default(uuid())
  name     String
  address  String
  imageUrl String
  services Service[] @relation("BarbershopService")
}

model Service {
  id           String     @id @default(uuid())
  name         String
  price        Decimal    @db.Decimal(10, 2)
  description  String
  barbershopId String
  barbershop   Barbershop @relation("BarbershopService", fields: [barbershopId], references: [id])
}
